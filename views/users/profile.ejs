<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h3><i class="bi bi-person-circle"></i> User Profile</h3>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 text-center">
              <div class="bg-primary rounded-circle d-inline-flex align-items-center justify-content-center mb-3" 
                   style="width: 100px; height: 100px;">
                <i class="bi bi-person-fill text-white" style="font-size: 3rem;"></i>
              </div>
            </div>
            <div class="col-md-8">
              <h4>Welcome, <%= user.username %>!</h4>
              <p class="text-muted"><i class="bi bi-envelope"></i> <%= user.email %></p>
              <p class="text-muted"><i class="bi bi-calendar"></i> Member since Recently</p>
              
              <div class="mt-4">
                <a href="/listings" class="btn btn-primary me-2">
                  <i class="bi bi-house-gear"></i> Browse Listings
                </a>
                <a href="/listings/new" class="btn btn-outline-primary">
                  <i class="bi bi-plus-circle"></i> Add Listing
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
